{
  "name": "front",
  "version": "1.0.0",
  "description": "Front for LN Markets app on Umbrel",
  "main": "index.js",
  "author": "Kilian Botrel",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint --color 'src/**/*.{js,vue}' --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-brands-svg-icons": "^5.15.3",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/vue-fontawesome": "^3.0.0-4",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.3.6",
    "tailwindcss": "^2.2.7",
    "vue": "^3.0.5",
    "vue-router": "4",
    "vuex": "^4.0.0",
    "vuex-persistedstate": "^4.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.5",
    "vite": "^2.4.3"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "rules": {
      "selector-type-no-unknown": [
        true,
        {
          "ignoreTypes": [
            "custom-namespace"
          ]
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "public/*",
      "docker/*"
    ],
    "rules": {
      "camelcase": 0,
      "no-unused-expressions": 0
    }
  }
}
